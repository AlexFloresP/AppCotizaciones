<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoblanco"
    tools:context=".Actualizar_Accesorios">


    <Button
        android:id="@+id/btnGuardarActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Actualizar herramienta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarActualizarPrecioAccesorio" />

    <EditText
        android:id="@+id/editarActualizarAccesorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="168dp"
        android:hint="Accesorio"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editarActualizarPrecioAccesorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editarNombreAccesorio"
        android:layout_alignParentLeft="true"
        android:hint="Costo extra"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@+id/editarActualizarAccesorio"
        tools:layout_editor_absoluteX="0dp">


    </EditText>

    <Button
        android:id="@+id/btnEliminarAccesorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Eliminar Herramienta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarActualizar" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="322dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:text="Si desea actualizar los datos del accesorio de la maquina modifique los datos y presione ACTUALIZAR HERRAMIENTA."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>